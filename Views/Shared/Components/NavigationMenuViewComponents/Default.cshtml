@model IEnumerable<string>

<a class="btn btn-block text-white btn-outline-secondary")" asp-action="Index" asp-controller="Home" asp-route-category="">Home</a>

@foreach (string category in Model)
{
    <a class="btn btn-block @(category == ViewBag.Selected ? "btn-primary" : "btn-outline-secondary") text-white"  asp-action="Index" asp-controller="Home" asp-route-category="@category" asp-route-pageNum="1">@category</a>
}